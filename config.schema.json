{
  "pluginAlias": "homebridge-dahua-alarm-platform",
  "pluginType": "platform",
  "headerDisplay": "Header",
  "footerDisplay": "Footer",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "cameras": {
        "title": "Alarm Cameras",
        "type": "array",
        "required": true,
        "min length": 1,
        "items": {
          "title": "Camera with Siren",
          "type": "object",
          "properties": {
            "channel": {
              "title": "channel",
              "type": "number",
              "required": true,
              "placeholder": 0,
              "description": "Channel of Camera, 0 = standalone camera"
            },
            "cameraName": {
              "type": "string",
              "title": "cameraName",
              "required": true,
              "description": "Name of Camera"
            },
            "cameraCredentials": {
              "title":"Camera Credentials to issue siren command",
              "type":"object",
              "required":true,
              "properties": {
                "ip":{
                  "title": "IP",
                  "type": "string",
                  "required": true,
                  "placeholder": "192.168.0.1",
                  "description": "IP Address of Camera or NVR/DVR"
                },
                "user":{
                  "title":"user",
                  "type": "string",
                  "required": true,
                  "placeholder": "admin",
                  "description": "Username for Camera Login"
                },
                "password":{
                  "title": "password",
                  "type": "string",
                  "required": true,
                  "placeholder": "password",
                  "description": "Password for Camera Login"
                }
              }
            }
          }
        }
      }
    }
  },
  "layout":[
        {
            "key": "cameras",
            "items": [
                "cameras[].channel",
                "cameras[].cameraName",
                {
                    "key": "cameras[].cameraCredentials",
                    "type": "section",
                    "expandable": true,
                    "expanded": false,
                    "items":[
                        "cameras[].cameraCredentials.ip",
                        "cameras[].cameraCredentials.user",
                        "cameras[].cameraCredentials.password"
                    ]
                }
            ]
        }
    ]
}
